<div class="content_profile_page">
    <div class="profile_photo">
        {{#each graduate}}
            <img src="/picture/photoGraduate/{{this.avatarphoto}}" alt="photo graduate" class="photo_graduate">
            <p>{{this.lastname}} {{this.name}} {{this.patronymic}}</p>
        {{/each}}
    </div>
    <div class="profile_data">
        {{#each graduate}}
            <div class="trainer">
                <p class="profile_data_zaglavie">Обучение</p>
                <ul>
                    <li><div class="profile_data_list_name">Год окончания:</div><div class="profile_data_list_inf">{{this.year}}</div></li>
                    <li><div class="profile_data_list_name">Факультет:</div><div class="profile_data_list_inf">{{this.title_faculty}}</div></li>
                    <li><div class="profile_data_list_name">Специальность:</div><div class="profile_data_list_inf">{{this.title_specialty}}</div></li>
                    <li><div class="profile_data_list_name">Форма обучения:</div><div class="profile_data_list_inf">{{this.type_training}}</div></li>
                    <li><div class="profile_data_list_name">Группа:</div><div class="profile_data_list_inf">{{this.groupp}}</div></li>
                </ul>
            </div>
            <div class="contacts">
                <p class="profile_data_zaglavie">Контакты</p>
                <ul>
                    <li><div class="profile_data_list_name">Телефон:</div><div class="profile_data_list_inf">{{this.number}}</div></li>
                    <li><div class="profile_data_list_name">E-mail:</div><div class="profile_data_list_inf">{{this.email}}</div></li>
                </ul>
            </div>
            <div class="career">
                <p class="profile_data_zaglavie">Карьера</p>
                {{this.career}}
            </div>
            <div class="review">
                <p class="profile_data_zaglavie">Отзыв</p>
                {{this.review}}
            </div>
        {{/each}}

    </div>
</div>
<div class="content_main_profileedit_page">
        <form action="/profileedit" method="post">
            {{#each graduate}}
            <div class="profileedit_inf">
                <p class="profile_data_zaglavie">Обновить информацию</p>
                <input type="text" class="profileedit_data" name="number" placeholder="Номер телефона" value={{this.number}}>
                <input type="text" class="profileedit_data" name="email" placeholder="E-mail" value={{this.email}} >
                <textarea type="text" class="profileedit_data" name="career" cols="40" rows="3" placeholder="Карьера">{{this.career}}</textarea>
                <textarea  type="text" class="profileedit_data" name="review" cols="40" rows="3" placeholder="Отзыв">{{this.review}}</textarea>
                <input type="submit" value="записать">
            </div>
            {{/each}}
        </form>
        <p class="profile_data_zaglavie">Загрузить аватар</p>
        <form action="/avatorphoto" method="post" enctype="multipart/form-data">
            <div class="profileedit_inf">
                <input type="file" name="filedata" class="profileedit_data">
                <input type="submit" value="записать">
            </div>
        </form>
        <p class="profile_data_zaglavie">Загрузить фото</p>
        <form action="/gallery" method="post" enctype="multipart/form-data">
            <div class="profileedit_inf">
                <input type="file" name="filedata" class="profileedit_data" multiple>
                <input type="submit" value="записать">
            </div>
        </form>
    <p class="profile_data_zaglavie">Галлерея</p>
</div>

    <div class="gallery">
        {{#each gallery}}
        <form action="deletephoto?photo_name={{this.photo_name}}" method="POST">
            <div>
                <input type="submit" value="удалить">
                <a href="#" class="prefix-open"><label for="{{this.photo_name}}"><img src="/picture/photoGraduate/{{this.photo_name}}" alt="photo gallery" class="photo_gallery"></label></a>
                <div id="Modal" class="prefix-Dialog">
                    <div>
                        <img src="/picture/photoGraduate/{{this.photo_name}}" alt="photo gallery" class="#">
                        <a class="prefix-close" title="Закрыть" href="#close"></a>
                    </div>
                </div>
            </div>
        </form>
        {{/each}}
    </div>

